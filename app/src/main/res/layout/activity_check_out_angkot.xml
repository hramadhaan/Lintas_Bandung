<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.angkot.CheckOutAngkotActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/angkotCheckOut_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitePrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/angkotCheckOut_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitePrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/angkotCheckOut_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:text="Cek Pesanan"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:text="Nama Pemesan"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_supervisor_account_blue_24dp" />

                <TextView
                    android:id="@+id/angkotCheckOut_namaPemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Hanfi Ramadhan"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/montserratbold"
            android:text="Keberangkatan"
            android:textColor="#000" />

        <TextView
            android:id="@+id/angkotCheckOut_keberangkatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/montserratregular"
            android:text="Bogor"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/montserratbold"
            android:text="Tujuan"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/angkotCheckOut_tujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/montserratregular"
            android:text="Jakarta"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/montserratbold"
            android:text="Jarak"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/angkotCheckOut_jarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/montserratregular"
            android:text="12 Km"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/montserratbold"
            android:text="Estimasi Waktu"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/angkotCheckOut_estimasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/montserratregular"
            android:text="13 Menit"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:fontFamily="@font/montserratbold"
            android:text="Total Harga"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/angkotCheckOut_totalHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/montserratregular"
            android:text="Rp. 10.000"
            android:textColor="#000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/angkotCheckOut_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_white"
            android:drawableLeft="@drawable/ic_gopay"
            android:fontFamily="@font/montserratbold"
            android:paddingHorizontal="12dp"
            android:text="Bayar melalui gopay" />

    </LinearLayout>


</LinearLayout>