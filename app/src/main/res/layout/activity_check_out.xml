<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".damri.CheckOutActivity">

    <TextView
        android:id="@+id/checkOut_namaPemesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_keberangkatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_jumlahPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/checkOut_jumlahHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/checkOut_indomaret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran Indomaret" />

        <Button
            android:id="@+id/checkOut_mandiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran Mandiri" />

        <Button
            android:id="@+id/checkOut_gojek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran Go-Jek" />

    </LinearLayout>
</LinearLayout>